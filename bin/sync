#!/bin/bash
set -e

usage () {
    echo "$0 pull FROM"
    echo "$0 push TO"
}

MODE=$1
shift || (usage; exit 1)

DEST=$1
shift || (usage; exit 1)

case $MODE in
    pull)
        ARGS="$DEST/ $(pwd)"
        ;;
    push)
        ARGS="$(pwd)/ $DEST"
        ;;
    *)
        usage
        exit 1
        ;;
esac

rsync -acv --exclude='/.git*' --exclude='*/doc/tags' --exclude='/bin' \
    --exclude='/bin/*' "$@" $ARGS
