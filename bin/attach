#!/usr/bin/env fish
if test (count $argv) -gt 1
    echo "usage: attach [SESSION]"
    exit 2
end

if test "$TMUX"
    echo "error: already attached to a tmux session"
    exit 2
end

if test "$argv[1]"
    set session "$argv[1]"
else
    set session "main"
end

if not tmux ls -F '#S' ^/dev/null | grep -q $session
    tmux new-session -d -s $session -n irssi \
        'ssh -t delphi.unx.sas.com bin/attach irssi'
    # create extra windows and set default layouts
    tmux new-window
    tmux select-window -t 1
end
tmux attach-session -d -t $session
